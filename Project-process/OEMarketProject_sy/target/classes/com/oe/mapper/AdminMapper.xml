   <select id="readBoardList" resultType="com.oe.domain.MarketBoardVO">
      select bo_title, bo_nickname, bo_regdate from marketboard order by bo_num asc
   </select>

<!-- 게시글 카운트  -->
   <update id="updateBoardCnt" >            
      update marketuser set us_boardCnt = us_boardCnt + #{amount} where us_id = #{re_id}
   </update>
<!-- 댓글 카운트-->
   <update id="updateReplyCnt" >            
      update marketuser set us_replyCnt = us_replyCnt + #{amount} where us_id = #{re_id}
   </update> 
</mapper>